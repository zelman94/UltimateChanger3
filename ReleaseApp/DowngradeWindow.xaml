<Window x:Class="UltimateChanger.DowngradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UltimateChanger"
        mc:Ignorable="d"
        Title="DowngradeWindow" Height="250" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Name="btnFitting" Content="FittingLink" Click="btnFitting_Click" Grid.Row="1" Grid.Column="1" Margin="5" BorderBrush="Black" Background="Black" Foreground="White" Opacity="0.8"/>
        <Button Name="btnNoah" Content="NoahLink" Click="btnNoah_Click"  Grid.Row="2" Grid.Column="1" Margin="5" BorderBrush="Black" Background="Black" Foreground="White" Opacity="0.8"/>

    </Grid>
</Window>
